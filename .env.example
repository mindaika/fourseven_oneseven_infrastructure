# Copy relevant variables to each stack's .env file:
#   apps/.env
#   homeassistant/.env
#   infrastructure/.env

# --- apps/.env ---
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key
AUTH0_DOMAIN=your_domain.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_AUDIENCE=your_audience

# --- infrastructure/.env ---
POSTGRES_DB=garbanzodb
POSTGRES_USER=garbanzo
POSTGRES_PASSWORD=your_postgres_password
PIHOLE_PASSWORD=your_pihole_password
TZ=America/Los_Angeles
SYNOLOGY_ADDR=your_nas_ip:5001
HA_GATEWAY_ADDR=your_docker_gateway_ip:8123
HOST_IP=your_host_ip

# --- homeassistant/.env ---
TZ=America/Los_Angeles
